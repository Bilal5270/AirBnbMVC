@model AirBnbMVC.Viewmodels.PropertiesViewmodel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Property</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Property.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Property.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Property.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Property.City)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Property.PostalCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Property.PostalCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Property.AmountOfRooms)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Property.AmountOfRooms)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Property.PricePerNight)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Property.PricePerNight)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Property.Landlord)
