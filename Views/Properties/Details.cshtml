@model AirBnbMVC.Viewmodels.PropertiesViewmodel

@{
    ViewData["Title"] = "Details";
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-8">
            <h2>Gegevens van @Html.DisplayFor(model => model.Property.Address) in @Html.DisplayFor(model => model.Property.City).</h2>
            <hr class="mb-4" />

            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Property.Address)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Property.Address) <br />
                    @Html.DisplayFor(model => model.Property.City) <br />
                    @Html.DisplayFor(model => model.Property.PostalCode)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Property.AmountOfRooms)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Property.AmountOfRooms)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Property.PricePerNight)
                </dt>
                <dd class="col-sm-9">
                    <strong>€@Html.DisplayFor(model => model.Property.PricePerNight)</strong>
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Property.Landlord)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Property.Landlord.FullName)
                </dd>
            </dl>
            <div class="btn-group" role="group" aria-label="Property Actions">
                <a class="btn btn-primary" asp-area="" asp-controller="Reservations" asp-action="Create" asp-route-propertyId="@Model.Property.Id">Boek nu!</a>
                <a class="btn btn-secondary" asp-action="Index">Terug</a>
            </div>
        </div>
    </div>
</div>
