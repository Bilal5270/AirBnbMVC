@model AirBnbMVC.Viewmodels.PropertiesViewmodel

@{
    ViewData["Title"] = "Index";
}

<h1>Alle Locaties! </h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Property.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property.PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property.AmountOfRooms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property.PricePerNight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property.Landlord)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Properties) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountOfRooms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerNight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Landlord.FullName)
            </td>
            <td>

                <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
                
            </td>
        </tr>
}
    </tbody>
</table>
